{% extends "::base.html.twig" %}

{% block body %}
<table class="tftable">
    <tr>
        <td>ID</td>
        <td>Titre</td>
        <td>Type</td>
        <td>Categorie</td>
        <td>Ville</td>
        <td>Prix</td>
        <td>Surface</td>
        <td>Description</td>
        <td>Validation</td>
        <td>Date d'insertion</td>
    </tr>
{% for entity in offres %}
            <tr>
                <td><a href="{{ path('offre_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{entity.titre}}</td>
                <td>{{entity.type }}</td>
                <td>{{ entity.categorie}}</td>
                <td>{{ entity.ville}}</td>
                <td>{{ entity.prix }}</td>
                <td>{{ entity.surface }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.validation }}</td>
                <td>{% if entity.dateInsertion %}{{entity.dateInsertion |date('Y-m-d H:i:s') }}{% endif %}</td>
 
            </tr>
        {% endfor %}
</table>        
{% endblock %}
