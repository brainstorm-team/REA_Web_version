{% extends "MyAppProjetBundle::layout.html.twig" %}

{% block Container %}
    
  
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Type</th>
                <th>Categorie</th>
                <th>Ville</th>
                <th>Prix</th>
                <th>Surface</th>
                <th>Description</th>
                <th>Validation</th>
                <th>Dateinsertion</th>
                
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('offre_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{entity.titre}}</td>
                <td>{{entity.type }}</td>
                <td>{{ entity.categorie}}</td>
                <td>{{ entity.ville}}</td>
                <td>{{ entity.prix }}</td>
                <td>{{ entity.surface }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.validation }}</td>
                <td>{% if entity.dateInsertion %}{{entity.dateInsertion |date('Y-m-d H:i:s') }}{% endif %}</td>
                
                <td>
                <ul>
                    <li>
                        <a href="{{ path('offre_show', { 'id': entity.id }) }}">Afficher les détails de l'offre</a>
                    </li>
                    <li>
                        <a href="{{ path('offre_edit', { 'id': entity.id }) }}">Modifier l'offre</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
        <ul>
        <li>
            <a href="{{ path('offre_new') }}">
                Créer une nouvelle offre
            </a>
        </li>
    </ul>
                
    
    {% endblock %}
